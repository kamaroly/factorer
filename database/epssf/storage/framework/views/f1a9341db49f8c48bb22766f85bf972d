<h4><?php echo e(ucfirst(trans('report.titre_contribution_changes'))); ?> <?php echo e(Request::segment(4).' Et '.Request::segment(5)); ?></h4>
<table class="pure-table pure-table-bordered">
	<thead>
		<tr>
			<th><?php echo e(trans('member.adhersion_id')); ?></th>
			<th><?php echo e(trans('member.names')); ?></th>
			<th><?php echo e(trans('member.institution')); ?></th>
			<th><?php echo e(trans('member.service')); ?></th>
			<th><?php echo e(trans('member.cotisation')); ?></th>
		</tr>
	</thead>

	<tbody>
	<?php
	 $currentSection = null;
	 $currentInstitution = null;
	?>
	<?php foreach($contributions as $contribution): ?>
		<?php
		 if ($contribution->monthly_fee > $contribution->amount) {
		 	$section = 'Augmentation';
		 }
		 if ($contribution->monthly_fee < $contribution->amount) {
		 	$section = 'Diminution';
		 }
	 	 if ($contribution->monthly_fee == $contribution->amount) {
		 	$section = 'new';
		 }
	  ?>

		<?php if($contribution->institution  !== $currentInstitution): ?>
		<?php $currentInstitution = $contribution->institution ?>
			<tr>
				<td colspan="5" style="color: red;font-weight: 700;border-bottom: 1px solid red">
					<?php echo e($currentInstitution); ?>

				</td>
			</tr>
		<?php endif; ?>
		<?php if($section !== $currentSection): ?>
		<?php $currentSection = $section ?>
			<tr>
				<td colspan="5" style="color: green;font-weight: 700;border-bottom: 2px dashed green">
					<?php echo e(trans('report.'.strtolower($currentSection))); ?>

				</td>
			</tr>
		<?php endif; ?>

		<tr>
			<td><?php echo $contribution->adhersion_id; ?></td>
			<td><?php echo $contribution->first_name; ?> <?php echo $contribution->last_name; ?></td>
			<td><?php echo $contribution->institution; ?></td>
			<td><?php echo $contribution->service; ?></td>
			<td><?php echo number_format($contribution->amount); ?></td>
		</tr>
	<?php endforeach; ?>
	</tbody>
</table>