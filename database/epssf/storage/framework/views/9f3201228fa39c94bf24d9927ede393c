<table class="pure-table pure-table-bordered">
<caption><?php echo $accounts->first()->account_nature; ?></caption>
	<thead>
		<tr>
			<th><?php echo e(trans('account.account_number')); ?></th>
			<th><?php echo e(trans('account.entitled')); ?></th>
			<?php /* <th><?php echo e(trans('account.debit')); ?></th>  */ ?>
			<?php /* <th><?php echo e(trans('account.credit')); ?></th>  */ ?>
			<th><?php echo e(trans('account.balance')); ?></th>
		</tr>
	</thead>
	<tbody>
	<?php $debits = 0; $credits = 0;?>
	<?php $accountNature = null; ?>
	 <!--startdate  has been  hard  coded  because  ceb postings  start in 2017 no need  to choose  between  two date -->
	<?php $startDate = '2017-01-01 00:00:00'; ?>
	<?php $endDate = Request::segment(4); ?>
	<?php $__empty_1 = true; foreach($accounts as $account): $__empty_1 = false; ?>
	<?php try { ?>
	<tr>
		<td><?php echo $account->account_number; ?></td>
		<td><?php echo $account->entitled; ?></td>
		<?php $debit =  $account->debits()->betweenDates($startDate,$endDate)->sum('amount') ?>
	    <?php /* <td style="text-align: center"><?php echo number_format(abs($debit)); ?></td>  */ ?>
		<?php  $credit = $account->credits()->betweenDates($startDate,$endDate)->sum('amount') ?>
	    <?php /* <td style="text-align: center"><?php echo number_format(abs($credit)); ?></td> */ ?>
		<td style="text-align: center">

		<?php if($accountType == 'passif' || $accountType == 'produits'): ?>
		    <?php $balance =  abs($credit) - abs($debit);?>
		<?php else: ?>
			<?php $balance =  abs($debit) - abs($credit);?>
		<?php endif; ?>
		
		<?php if($balance < 0): ?>
			(<?php echo number_format(abs($balance)); ?>)
		<?php else: ?> 
			<?php echo number_format(abs($balance)); ?>

		<?php endif; ?>
		</td>

		<?php $debits+=$debit; $credits+=$credit; ?>
	</tr>
	<?php 
	} catch (Exception $e) {
			
	} ?>
	<?php endforeach; if ($__empty_1): ?>
		<?php /* empty expr */ ?>
	<?php endif; ?>

	BILAN_RESULTS

	BILAN_TOTAL

	<?php  $balance = abs(abs($credits) - abs($debits)); ?>
	<?php session()->put('total',$balance); ?>

	</tbody>
</table>