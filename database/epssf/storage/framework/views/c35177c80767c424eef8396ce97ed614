<?php if($message = Session::get('success')): ?>
<div class="row">
	<div data-alert class="alert alert-success radius">
	  	<strong>Success:</strong> <?php echo $message; ?>

	  	<a href="#" class="close">&times;</a>
	</div>
</div>
<?php echo e(Session::forget('success')); ?>

<?php endif; ?>

