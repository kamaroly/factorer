<script>
		var barChartData = {
			labels : [<?php foreach($contributions as $contribution): ?>'<?php echo $contribution->month; ?>',<?php endforeach; ?>],
			datasets : [
				{
					label: "Contribution per month",
					fillColor : "rgba(151,187,205,0.2)",
					strokeColor : "rgba(151,187,205,1)",
					pointColor : "rgba(151,187,205,1)",
					pointStrokeColor : "#fff",
					pointHighlightFill : "#fff",
					pointHighlightStroke : "rgba(151,187,205,1)",
					data :  [<?php foreach($contributions as $contribution): ?><?php echo $contribution->amount; ?>,<?php endforeach; ?>]
				}
			]

		}
		var lineChartData = {
			labels : [<?php foreach($loans as $loan): ?><?php echo $loan->month; ?>,<?php endforeach; ?>],
			datasets : [
				{
					label: "Contribution per month",
					fillColor : "rgba(151,187,205,0.2)",
					strokeColor : "rgba(151,187,205,1)",
					pointColor : "rgba(151,187,205,1)",
					pointStrokeColor : "#fff",
					pointHighlightFill : "#fff",
					pointHighlightStroke : "rgba(151,187,205,1)",
					data :  [<?php foreach($loans as $loan): ?><?php echo $loan->amount; ?>,<?php endforeach; ?>]
				}
			]

		}

	  var countColor = 0;
      var pieData = [ <?php foreach($institutions as $institution): ?>
                       {
				        value: <?php echo $institution->countStudents; ?>,
				        color:    "#"+((1<<24)*Math.random()|0).toString(16),
				        highlight: "#FF5A5E",
				        label: "<?php echo $institution->name; ?>"
					    }
					  ,<?php endforeach; ?>
					 ];

	var radarChartData = {
		labels: [<?php foreach($institutionsLoan as $institution): ?> "<?php echo $institution->name; ?>",<?php endforeach; ?>],
		datasets: [
			{
				label: "My Second dataset",
				fillColor: "rgba(151,187,205,0.2)",
				strokeColor: "rgba(151,187,205,1)",
				pointColor: "rgba(151,187,205,1)",
				pointStrokeColor: "#fff",
				pointHighlightFill: "#fff",
				pointHighlightStroke: "rgba(151,187,205,1)",
				data: [<?php foreach($institutionsLoan as $institution): ?> <?php echo $institution->loansCount; ?> ,<?php endforeach; ?>]
			}
		]
	};

    window.onload = function() {
        var ctx1 = document.getElementById("chart-area1").getContext("2d");
        window.myPie = new Chart(ctx1).Bar(barChartData);

        var ctx2 = document.getElementById("chart-area2").getContext("2d");
        window.myPie = new Chart(ctx2).Pie(pieData);       
        
        var ctx3 = document.getElementById("chart-area3").getContext("2d");
        window.myPie = new Chart(ctx3).Line(lineChartData);

        var ctx4 = document.getElementById("chart-area4").getContext("2d");
        window.myPie = new Chart(ctx4).Radar(radarChartData);
    };
    
	</script>