          <div class="list-group">
           <?php 
           $logFiles = [];
           foreach ($files as $file) {
             $logFiles  [base64_encode($file)] = $file;
           }

            ?>
            <?php echo Form::select('files', $logFiles, Input::get('l', null), ['class'=>'form-control','id'=>'select-file']); ?>


          </div>
        </div>
        <div class="col-sm-9 col-md-10 table-container">
          <?php if($logs === null): ?>
            <div>
