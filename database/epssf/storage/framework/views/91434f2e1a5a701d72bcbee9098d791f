<table class="table table-bordered">
    <thead>
      <th><?php echo e(trans('member.email')); ?></th>
      <th><?php echo e(trans('member.names')); ?></th>
      <th><?php echo e(trans('user.status')); ?></th>
      <th><?php echo e(trans('general.options')); ?></th>
    </thead>
    <tbody>
      <?php foreach($users as $user): ?>
        <tr>
          <td><a href="<?php echo e(route('sentinel.users.show', array($user->hash))); ?>"><?php echo e($user->email); ?></a></td>
          <td><?php echo e($user->first_name); ?>  <?php echo e($user->last_name); ?> </td>
          <td><?php echo e($user->status); ?> </td>
          <td>
             <button class="btn btn-default" type="button" onClick="location.href='<?php echo e(action('\\Sentinel\Controllers\UserController@edit', array($user->hash))); ?>'">Edit</button>
                        <?php if($user->status != 'Suspended'): ?>
                            <button class="btn btn-default" type="button" onClick="location.href='<?php echo e(action('\\Sentinel\Controllers\UserController@suspend', array($user->hash))); ?>'">Suspend</button>
                        <?php else: ?>
                            <button class="btn btn-default" type="button" onClick="location.href='<?php echo e(action('\\Sentinel\Controllers\UserController@unsuspend', array($user->hash))); ?>'">Un-Suspend</button>
                        <?php endif; ?>
                        <?php if($user->status != 'Banned'): ?>
                            <button class="btn btn-default" type="button" onClick="location.href='<?php echo e(action('\\Sentinel\Controllers\UserController@ban', array($user->hash))); ?>'">Ban</button>
                        <?php else: ?>
                            <button class="btn btn-default" type="button" onClick="location.href='<?php echo e(action('\\Sentinel\Controllers\UserController@unban', array($user->hash))); ?>'">Un-Ban</button>
                        <?php endif; ?>
                     <a href="<?php echo e(route('sentinel.users.destroy', array($user->hash))); ?>" class="btn btn-danger" 
                    onclick="event.preventDefault();
                             document.getElementById('delete-form-<?php echo e($user->hash); ?>').submit();">
                  Delete
                </a>
                <?php echo Form::open(['method' => 'DELETE', 'route' => ['sentinel.users.destroy', $user->hash],'id'=>'delete-form-'. $user->hash]); ?>


                <?php echo Form::close(); ?>

                                             </td>
        </tr>
      <?php endforeach; ?>
    </tbody>
  </table>
  <?php echo $users->render(); ?>

